    },
    {
      "sourcePropertyName": "age",
      "destPropertyName": "currentAge",
      "dataType": "int",
      "type": "single"
    },
    {
      "sourcePropertyName": "height",
      "destPropertyName": "myheight",
      "dataType": "decimal",
      "type": "single"
    }
  ]

}
